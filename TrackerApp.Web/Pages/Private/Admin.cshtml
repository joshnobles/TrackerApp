@page
@model TrackerApp.Web.Pages.Private.AdminModel
@{
    ViewData["Title"] = "Admin";
}

@section Styles {

    <style>

        .profile-image {
            height: 96px;
            width: 96px;
        }

    </style>

}

@Html.AntiForgeryToken()

<div class="container text-center text-light">
    <div class="row">
        <div class="col">
            <h1>Admin</h1>
        </div>
    </div>
    <div id="alertMessageContainer">

    </div>
    <div class="row mt-4 ms-4 text-start">
        <div class="col">
            <h3>User Management</h3>
        </div>
    </div>
    <div class="row mt-2">
        <div class="col">
            <table class="table table-striped table-bordered text-light">
                <thead>
                    <tr>
                        <th>User ID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Profile Image</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="userTableBody">

                </tbody>
            </table>
        </div>
    </div>
</div>

@section Modals {

    <div class="modal fade" id="editUserModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="editUserModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="editUserModalLabel">Edit User</h1>
                </div>
                <div class="modal-body container">
                    <div class="row">
                        <div class="col">
                            <div class="form-floating">
                                <input id="txtUserID" class="form-control" type="text" placeholder=" " disabled readonly>
                                <label for="txtUserID">User ID</label>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col">
                            <div class="form-floating">
                                <input id="txtName" class="form-control" type="text" placeholder=" ">
                                <label for="txtName">Name</label>
                            </div>
                            <span id="nameValidation" class="text-danger"></span>
                        </div>
                        <div class="col">
                            <div class="form-floating">
                                <input id="txtEmail" class="form-control" type="text" placeholder=" ">
                                <label for="txtEmail">Email</label>
                            </div>
                            <span id="emailValidation" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col">
                            <div class="form-floating">
                                <input id="txtProfileImageSrc" class="form-control" type="text" placeholder=" ">
                                <label for="txtProfileImageSrc">Profile Image Source</label>
                            </div>
                            <span id="profileImageSrcValidation" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button id="btnCloseEditUserModal" type="button" class="btn btn-secondary">Close</button>
                    <button id="btnSubmitEditUserForm" type="button" class="btn btn-success">Save Changes</button>
                    <button id="btnDeleteUser" type="button" class="btn btn-danger">Delete User</button>
                </div>
            </div>
        </div>
    </div>

}

@section Scripts {

    <script src="~/js/UserInformationHandler.js"></script>

}